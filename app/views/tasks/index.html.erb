<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>
<div class="container mx-auto">
 <div class="flex flex-row">
    <%= link_to  "+New Task", new_task_path, class:"text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2"%>
    <%= link_to  "see all categories", categories_path, class:"text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2"%>
     <%= link_to 'status ascending', tasks_path(sort: 'asc'), class:"text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2" %> 
    <%= link_to 'stauts deascending', tasks_path(sort: 'desc'), class:"text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2" %>
  </div>

<div id="tasks" class="relative overflow-x-auto shadow-md sm:rounded-lg">
  <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr >
        <th  scope="col" class="px-6 py-3">
          Name
        </th>
        <th  scope="col" class="px-6 py-3">
          Category
        </th>
         <th  scope="col" class="px-6 py-3">
          Description
        </th>
         <th  scope="col" class="px-6 py-3">
          status
        </th>
         <th  scope="col" class="px-6 py-3">
          Action
        </th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600"> 
         <td  class="px-6 py-4">
                  <%= task.name %>
                </td>
                <td  class="px-6 py-4">
                  <%= task.category.name %>
                </td>
                <td  class="px-6 py-4">
                  <%= task.description %>
                </td>
                <td  class="px-6 py-4">
                    <%= task.status.humanize %>
                </td>
                <td  class="px-6 py-4">
                    <%= link_to "Show this task", task, class:"text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2" %>
                </td>
      </tr>
        <% end %>
    </tbody>
  </table>
  </div>
  </div>
</div>

